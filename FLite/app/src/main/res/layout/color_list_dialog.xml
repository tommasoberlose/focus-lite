<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_note_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_light">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_default"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_red">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_red"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_purple">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_purple"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_deep_purple">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_deep_purple"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_indigo">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_indigo"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_blue">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_blue"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_light_blue">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_light_blue"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_teal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_teal"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_green">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_green"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_light_green">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_light_green"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_yellow">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_yellow"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_orange">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_orange"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_deep_orange">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:clickable="true"
                android:id="@+id/color_deep_orange"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/check_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_margin="8dp"
            android:background="@drawable/circle_back_grey">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
