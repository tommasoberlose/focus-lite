<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_material_light"
    app:cardBackgroundColor="@color/background_material_light"
    android:orientation="vertical"
    android:id="@+id/card_container"
    android:minWidth="500dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:layout_marginBottom="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/action_close">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="@string/text_choose_reminder_type"
                android:textAppearance="?android:attr/textAppearanceListItem"
                android:layout_margin="16dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/all_text"/>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:tint="@color/all_text"
                android:layout_marginRight="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_action_hardware_keyboard_arrow_down"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/back_selected_item"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:id="@+id/action_date"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:paddingBottom="16dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingLeft="12dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@drawable/ic_action_social_notifications"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_back_light"
                android:backgroundTint="@color/primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/text_date_and_time"
                android:layout_marginTop="8dp"
                android:textColor="@color/all_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:id="@+id/action_wifi"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:paddingBottom="16dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingLeft="12dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@drawable/ic_action_device_signal_wifi_3_bar"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_back_light"
                android:backgroundTint="@color/primary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/text_wifi"
                android:layout_marginTop="8dp"
                android:textColor="@color/all_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:id="@+id/action_bluetooth"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:paddingBottom="16dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingLeft="12dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="10dp"
                android:src="@drawable/ic_action_device_bluetooth"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_back_light"
                android:backgroundTint="@color/primary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/text_bluetooth"
                android:layout_marginTop="8dp"
                android:textColor="@color/all_text"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_background_md"
        android:backgroundTint="@color/back_selected_item"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:id="@+id/container_actual_reminder"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/all_text"
            android:id="@+id/actual_reminder"
            android:fontFamily="sans-serif-medium"
            android:layout_weight="0.8"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_action_navigation_close"
            android:tint="@android:color/black"
            android:alpha="0.5"
            android:id="@+id/action_remove"/>
    </LinearLayout>
</LinearLayout>