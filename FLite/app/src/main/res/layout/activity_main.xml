<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_lighter">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container"
            android:orientation="vertical">
            <android.support.v7.widget.Toolbar
                android:id="@+id/my_awesome_toolbar"
                android:layout_height="64dp"
                android:layout_width="match_parent"
                android:theme="@style/style_actionBar"
                app:layout_scrollFlags="scroll|enterAlways"
                android:background="@color/primary"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:alpha="0.8"
                    android:text="@string/app_name"
                    android:fontFamily="sans-serif-light"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </android.support.v7.widget.Toolbar>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="2dp"
                        android:background="@color/background_dark_lighter_card"
                        app:cardBackgroundColor="@color/background_dark_lighter_card"
                        app:cardPreventCornerOverlap="true"
                        android:animateLayoutChanges="true"
                        android:layout_margin="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:gravity="center_vertical"
                                android:id="@+id/section_notification_settings"
                                android:background="?attr/selectableItemBackground">
                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="8dp"
                                    android:tint="@color/white_back"
                                    android:src="@drawable/ic_action_action_view_day"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceButton"
                                    android:textColor="@android:color/white"
                                    android:text="@string/title_notification_settings"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/black"
                                android:alpha="0.2"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:gravity="center_vertical"
                                android:id="@+id/section_alarm_settings"
                                android:background="?attr/selectableItemBackground">
                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="8dp"
                                    android:tint="@color/white_back"
                                    android:src="@drawable/ic_action_social_notifications"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceButton"
                                    android:textColor="@android:color/white"
                                    android:text="@string/title_section_alarm"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/black"
                                android:alpha="0.2"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:id="@+id/section_style_settings"
                                android:background="?attr/selectableItemBackground"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp">
                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="8dp"
                                    android:tint="@color/white_back"
                                    android:src="@drawable/ic_action_image_color_lens"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceButton"
                                    android:textColor="@android:color/white"
                                    android:text="@string/title_customize_settings"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/black"
                                android:alpha="0.2"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:gravity="center_vertical"
                                android:id="@+id/section_application_settings"
                                android:background="?attr/selectableItemBackground">
                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="4dp"
                                    android:tint="@color/white_back"
                                    android:src="@drawable/ic_app_flite"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceButton"
                                    android:textColor="@android:color/white"
                                    android:text="@string/title_app_settings"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="2dp"
                        android:background="@color/background_dark_lighter_card"
                        app:cardBackgroundColor="@color/background_dark_lighter_card"
                        app:cardPreventCornerOverlap="true"
                        android:animateLayoutChanges="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:gravity="center_vertical"
                                android:id="@+id/action_feedback"
                                android:background="?attr/selectableItemBackground">
                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="8dp"
                                    android:tint="@color/white_back"
                                    android:src="@drawable/ic_action_info_outline"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceButton"
                                    android:textColor="@android:color/white"
                                    android:text="@string/help_feedback"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/black"
                                android:alpha="0.2"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:gravity="center_vertical"
                                android:id="@+id/action_about"
                                android:background="?attr/selectableItemBackground">
                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:padding="8dp"
                                    android:tint="@color/white_back"
                                    android:src="@drawable/ic_action_feedback"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceButton"
                                    android:textColor="@android:color/white"
                                    android:text="@string/title_tab_developer"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_add"
        app:elevation="8dp"
        android:id="@+id/action_new"
        android:clickable="true"
        android:animateLayoutChanges="true"
        android:layout_gravity="center|bottom"
        android:transitionName="floating_button"
        app:borderWidth="0dp"
        android:layout_margin="16dp"
        app:backgroundTint="@color/primary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/fab_elevation"
        android:background="@color/black_opacity"
        android:id="@+id/first_use"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="24dp"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:text="@string/text_first_use"
                android:layout_marginBottom="16dp" />
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:text="@android:string/ok"
                android:layout_gravity="end"
                android:id="@+id/button_first_use"
                android:background="@drawable/item_background"
                android:layout_margin="16dp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>