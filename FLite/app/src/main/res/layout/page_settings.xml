<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:theme="@style/style_actionBar"
        app:layout_scrollFlags="scroll|enterAlways"
        android:background="@color/primary"
        android:gravity="center_horizontal"
        android:elevation="2dp"/>
        -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:cardElevation="1dp"
        android:background="@color/back_selected_item"
        app:cardBackgroundColor="@color/back_selected_item"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/section_notification_settings_icon"
                    android:src="@drawable/section_notification_icon"
                    android:tint="@color/secondary_text"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"/>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/section_alarm_settings_icon"
                    android:src="@drawable/section_alarm_icon"
                    android:tint="@color/secondary_text"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"/>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/section_style_settings_icon"
                    android:src="@drawable/section_style_icon"
                    android:tint="@color/secondary_text"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"/>
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/section_application_settings_icon"
                    android:src="@drawable/section_application_icon"
                    android:tint="@color/secondary_text"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"/>
            </LinearLayout>
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:id="@+id/action_close"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_action_navigation_close"
                android:tint="@color/secondary_text"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/section_notification_settings"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/title_notification_settings"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_show_notify">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_show_notify"
                        android:id="@+id/show_notify_title"
                        android:layout_toLeftOf="@+id/show_notify_check"
                        android:layout_toStartOf="@+id/show_notify_check" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/show_notify_subtitle"
                        android:text="@string/subtitle_show_notify"
                        android:layout_below="@+id/show_notify_title"
                        android:layout_toLeftOf="@+id/show_notify_check"
                        android:layout_toStartOf="@+id/show_notify_check" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/show_notify_check"
                        android:checked="true"
                        app:theme="@style/CheckBox.Colored"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_show_add_notification">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_show_add_notification"
                        android:id="@+id/show_add_notification_title"
                        android:layout_toLeftOf="@+id/show_add_notification_check"
                        android:layout_toStartOf="@+id/show_add_notification_check" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/show_add_notification_subtitle"
                        android:text="@string/subtitle_show_add_notification"
                        android:layout_below="@+id/show_add_notification_title"
                        android:layout_toLeftOf="@+id/show_add_notification_check"
                        android:layout_toStartOf="@+id/show_add_notification_check" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/show_add_notification_check"
                        android:checked="true"
                        app:theme="@style/CheckBox.Colored"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_order">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_order"
                        android:id="@+id/order_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/order_subtitle"
                        android:text="@string/subtitle_order"
                        android:layout_below="@+id/order_title"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_notification_preference">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_notification_preference"
                        android:id="@+id/notification_preference_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/notification_preference_subtitle"
                        android:text="@string/subtitle_notification_preference"
                        android:layout_below="@+id/notification_preference_title" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_delete_to_archive">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_delete_to_archive"
                        android:id="@+id/delete_to_archive_title"
                        android:layout_toLeftOf="@+id/delete_to_archive_check"
                        android:layout_toStartOf="@+id/delete_to_archive_check" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/delete_to_archive_subtitle"
                        android:text="@string/subtitle_delete_to_archive"
                        android:layout_below="@+id/delete_to_archive_title"
                        android:layout_toLeftOf="@+id/delete_to_archive_check"
                        android:layout_toStartOf="@+id/delete_to_archive_check" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/delete_to_archive_check"
                        android:checked="true"
                        app:theme="@style/CheckBox.Colored"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_show_starred">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_show_starred"
                        android:id="@+id/show_starred_title"
                        android:layout_toLeftOf="@+id/show_starred_check"
                        android:layout_toStartOf="@+id/show_starred_check" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/show_starred_subtitle"
                        android:text="@string/subtitle_show_starred"
                        android:layout_below="@+id/show_starred_title"
                        android:layout_toLeftOf="@+id/show_starred_check"
                        android:layout_toStartOf="@+id/show_starred_check" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/show_starred_check"
                        android:checked="true"
                        app:theme="@style/CheckBox.Colored"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"/>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/section_alarm_settings"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/title_section_alarm"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_notification_settings">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_notification_preferences"
                        android:id="@+id/notification_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/notification_subtitle"
                        android:layout_below="@+id/notification_title"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_custom_sound">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_custom_sound"
                        android:id="@+id/custom_sound_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/custom_sound_subtitle"
                        android:text="@string/subtitle_custom_sound"
                        android:layout_below="@+id/custom_sound_title"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/section_devices_and_connections"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_choose_device">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/text_active_device"
                        android:id="@+id/choose_device_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/choose_device_subtitle"
                        android:text="@string/subtitle_action_choose_device"
                        android:layout_below="@+id/choose_device_title"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_choose_wifi">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/text_active_connection"
                        android:id="@+id/choose_wifi_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/choose_wifi_subtitle"
                        android:text="@string/subtitle_action_choose_wifi"
                        android:layout_below="@+id/choose_wifi_title"/>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/section_style_settings"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/title_customize_settings"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_popup_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_popup_style"
                        android:id="@+id/popup_style_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:text="@string/style_deafult"
                        android:id="@+id/popup_style_subtitle"
                        android:layout_below="@+id/popup_style_title"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/action_widget_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_widget_style"
                        android:id="@+id/widget_style_title"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:text="@string/style_material_dark"
                        android:layout_below="@+id/widget_style_title"
                        android:id="@+id/widget_style_subtitle"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/section_application_settings"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/title_app_settings"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_view_intro">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_view_intro"
                        android:id="@+id/view_intro_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:text="@string/subtitle_view_intro"
                        android:id="@+id/view_intro_subtitle"
                        android:layout_below="@+id/view_intro_title"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_twelve_hour">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_twelve_hour"
                        android:id="@+id/twelve_hour_title"
                        android:layout_toLeftOf="@+id/twelve_hour_check"
                        android:layout_toStartOf="@+id/twelve_hour_check" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/twelve_hour_subtitle"
                        android:text="@string/subtitle_twelve_hour"
                        android:layout_below="@+id/twelve_hour_title"
                        android:layout_toLeftOf="@+id/twelve_hour_check"
                        android:layout_toStartOf="@+id/twelve_hour_check" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/twelve_hour_check"
                        android:checked="true"
                        app:theme="@style/CheckBox.Colored"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_close_note_after_actions">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings"
                        android:textAppearance="?android:attr/textAppearanceListItem"
                        android:text="@string/title_close_note_after_actions"
                        android:id="@+id/close_note_after_actions_title"
                        android:layout_toLeftOf="@+id/close_note_after_actions_check"
                        android:layout_toStartOf="@+id/close_note_after_actions_check" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/text_color_settings_subtitle"
                        android:id="@+id/close_note_after_actions_subtitle"
                        android:text="@string/subtitle_close_note_after_actions"
                        android:layout_below="@+id/close_note_after_actions_title"
                        android:layout_toLeftOf="@+id/close_note_after_actions_check"
