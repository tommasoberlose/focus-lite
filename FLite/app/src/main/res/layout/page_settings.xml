<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:theme="@style/style_actionBar"
        app:layout_scrollFlags="scroll|enterAlways"
        android:background="@color/primary"
        android:gravity="center_horizontal"
        android:elevation="2dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/title_notification_settings"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_order">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_order"
                        android:id="@+id/order_title"
                        android:layout_toLeftOf="@+id/order_check"
                        android:layout_toStartOf="@+id/order_check" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/order_subtitle"
                        android:text="@string/subtitle_order"
                        android:layout_below="@+id/order_title"
                        android:layout_toLeftOf="@+id/order_check"
                        android:layout_toStartOf="@+id/order_check" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/order_check"
                        android:checked="true"
                        app:theme="@style/mDialog"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_switch_share">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_preferences_share"
                        android:id="@+id/share_title"
                        android:layout_toLeftOf="@+id/share_check"
                        android:layout_toStartOf="@+id/share_check" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/share_subtitle"
                        android:text="@string/subtitle_preferences_share"
                        android:layout_below="@+id/share_title"
                        android:layout_toLeftOf="@+id/share_check"
                        android:layout_toStartOf="@+id/share_check" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/share_check"
                        android:checked="true"
                        app:theme="@style/mDialog"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_swicth_ongoing">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_preferences_ongoing"
                        android:id="@+id/ongoing_title"
                        android:layout_toLeftOf="@+id/ongoing_check"
                        android:layout_toStartOf="@+id/ongoing_check" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/ongoing_subtitle"
                        android:text="@string/subtitle_preferences_ongoing"
                        android:layout_below="@+id/ongoing_title"
                        android:layout_toLeftOf="@+id/ongoing_check"
                        android:layout_toStartOf="@+id/ongoing_check" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ongoing_check"
                        android:checked="true"
                        app:theme="@style/mDialog"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_show_add_notification">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_show_add_notification"
                        android:id="@+id/show_add_notification_title"
                        android:layout_toLeftOf="@+id/show_add_notification_check"
                        android:layout_toStartOf="@+id/show_add_notification_check" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/show_add_notification_subtitle"
                        android:text="@string/subtitle_show_add_notification"
                        android:layout_below="@+id/show_add_notification_title"
                        android:layout_toLeftOf="@+id/show_add_notification_check"
                        android:layout_toStartOf="@+id/show_add_notification_check" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/show_add_notification_check"
                        android:checked="true"
                        app:theme="@style/mDialog"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"/>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/title_section_alarm"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_notification_settings">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_notification_preferences"
                        android:id="@+id/notification_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/notification_subtitle"
                        android:layout_below="@+id/notification_title"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_custom_sound">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_custom_sound"
                        android:id="@+id/custom_sound_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/custom_sound_subtitle"
                        android:text="@string/style_deafult"
                        android:layout_below="@+id/custom_sound_title"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_persistent_sound">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_persistent_sound"
                        android:id="@+id/persistent_sound_title"
                        android:layout_toLeftOf="@+id/persistent_sound_check"
                        android:layout_toStartOf="@+id/persistent_sound_check" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:id="@+id/persistent_sound_subtitle"
                        android:text="@string/subtitle_persistent_sound"
                        android:layout_below="@+id/persistent_sound_title"
                        android:layout_toLeftOf="@+id/persistent_sound_check"
                        android:layout_toStartOf="@+id/persistent_sound_check" />
                    <android.support.v7.widget.AppCompatCheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/persistent_sound_check"
                        android:checked="true"
                        app:theme="@style/mDialog"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"/>
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/title_customize_settings"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_popup_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_popup_style"
                        android:id="@+id/popup_style_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:text="@string/style_deafult"
                        android:id="@+id/popup_style_subtitle"
                        android:layout_below="@+id/popup_style_title"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/back_selected_item"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:id="@+id/action_widget_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_widget_style"
                        android:id="@+id/widget_style_title"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:text="@string/style_material_dark"
                        android:layout_below="@+id/widget_style_title"
                        android:id="@+id/widget_style_subtitle"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="16dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/title_app_settings"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/action_view_intro">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/title_view_intro"
                        android:id="@+id/view_intro_title" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:text="@string/subtitle_view_intro"
                        android:id="@+id/view_intro_subtitle"
                        android:layout_below="@+id/view_intro_title"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>