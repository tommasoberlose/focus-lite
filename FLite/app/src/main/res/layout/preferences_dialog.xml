<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="vertical"
        android:background="@color/back_selected_item">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_note_preferences"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/action_color"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="12dp"
                    android:id="@+id/color_icon"
                    android:orientation="horizontal"
                    android:background="@drawable/circle_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/all_text"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/text_note_color"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/action_icon"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
                <LinearLayout
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/circle_back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/all_text"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/text_note_icon"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/back_selected_item"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/action_lock"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="6dp"
                    android:id="@+id/icon_lock"
                    android:src="@drawable/ic_action_lock_open"
                    android:tint="@color/secondary_text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_lock"
                    android:textColor="@color/all_text"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/action_lock" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/action_list"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:id="@+id/icon_list"
                    android:src="@drawable/ic_action_ic_playlist_add_check_white_24dp"
                    android:tint="@color/secondary_text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_list"
                    android:textColor="@color/all_text"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/action_list_show" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/back_selected_item"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/action_info"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_action_info_outline"
                    android:tint="@color/secondary_text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/all_text"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/text_note_info" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:id="@+id/action_ok"
                    android:background="?attr/selectableItemBackground"
                    android:textAppearance="?android:attr/textAppearanceButton"
                    android:textColor="@color/primary"
                    android:text="@android:string/ok"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>