<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MAIN THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/primary_light</item>
        <item name="colorSwitchThumbNormal">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/black_400</item>
    </style>


    <!-- MAIN ACTIONBAR -->
    <style name="style_actionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>


    <style name="MyDialog_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>

        <item name="colorControlActivated">@color/primary_light</item>
        <item name="colorSwitchThumbNormal">@color/primary_dark</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Dialog_Pop" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorSwitchThumbNormal">@color/back_selected_item</item>

    </style>

    <style name="mDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorSwitchThumbNormal">@color/back_selected_item</item>

    </style>

    <style name="mAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorSwitchThumbNormal">@color/back_selected_item</item>

    </style>

    <style name="mDialog_Dark_light" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="colorControlActivated">@color/white_back</item>
        <item name="colorSwitchThumbNormal">@color/background_dark_light_text_header</item>

    </style>

    <style name="mDialog_Picker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>

        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorSwitchThumbNormal">@color/back_selected_item</item>
        <item name="android:headerBackground">@color/primary</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_top</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlActivated">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="CheckBox.Colored" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textColorSecondary">@color/black_500</item>
    </style>

    <style name="CheckBox.Colored.Blue" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary</item>
    </style>

    <style name="CheckBox.Colored.BlueDark" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="android:textColorSecondary">@color/primary_dark</item>
    </style>

    <style name="CheckBox.Colored.Starred" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/icon.do</item>
        <item name="android:textColorSecondary">@color/icon.do</item>
    </style>

</resources>